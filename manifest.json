{
   "background": {
       "scripts": [ "background_script.js" ]
   },
   "content_scripts": [ {
      "all_frames": true,
      "js": [ "content_script.js" ],
      "matches": [ "http://*/*", "https://*/*", "ftp://*/*" ]
   } ],
   "description": "Use middle mouse button to close tabs, anywhere on the page, except on links.",
   "name": "Close Tab with MMB",
   "permissions": [ "tabs", "https://*/*", "http://*/*" ],
   "manifest_version": 2,
   "version": "1.0"
}
